<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Piedra"
        android:id="@+id/button_piedra"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@color/colorPiedra"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papel"
        android:layout_weight="1"
        android:id="@+id/button_papel"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorPapel"
        android:textColor="@android:color/background_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tijeras"
        android:layout_weight="1"
        android:id="@+id/button_tijeras"
        android:backgroundTint="@color/colorTijeras"
        android:textColor="@android:color/background_light"/>
</LinearLayout>